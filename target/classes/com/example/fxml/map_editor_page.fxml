<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="com.example.controllers.MapEditorController"
            style="-fx-background-color: #2b2b2b;">

    <!-- Top toolbar with action buttons -->
    <top>
        <ToolBar style="-fx-background-color: #333333; -fx-padding: 5px;">
            <HBox spacing="15" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <!-- Home Button -->
                <Button fx:id="homeBtn" onAction="#goToHome" 
                        style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fx:id="homeImage" fitWidth="85" fitHeight="30" preserveRatio="false">
                            <image>
                                <Image url="@../assets/ui/Ribbon_Blue_3Slides.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Return to home screen" />
                    </tooltip>
                </Button>
                
                <!-- Map Selection Label and Dropdown -->
                <Label text="Select Map:" style="-fx-text-fill: #ffffff; -fx-font-weight: bold;"/>
                <ComboBox fx:id="mapSelectionCombo" prefWidth="240" promptText="Choose a map..."
                          style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-weight: bold; 
                                 -fx-border-color: #66BB6A; -fx-border-width: 2; -fx-border-radius: 3;">
                </ComboBox>
            </HBox>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <!-- Edit Mode Button with Blue Slides background -->
                <Button fx:id="editModeBtn" onAction="#toggleEditMode" 
                        style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fitWidth="85" fitHeight="30" preserveRatio="false">
                            <image>
                                <Image url="@../assets/ui/Button_Blue_3Slides.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Switch to edit mode to place tiles" />
                    </tooltip>
                </Button>
                
                <!-- Delete Mode Button with text -->
                <Button fx:id="deleteModeBtn" onAction="#toggleDeleteMode"
                        style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fitWidth="85" fitHeight="30" preserveRatio="false">
                            <image>
                                <Image url="@../assets/ui/Button_Blue_3Slides.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Switch to delete mode to remove tiles" />
                    </tooltip>
                </Button>

                <!-- Clear Map Button -->
                <Button fx:id="clearMapBtn" onAction="#clearMap"
                        style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fitWidth="85" fitHeight="30" preserveRatio="false">
                            <image>
                                <Image url="@../assets/ui/Button_Blue_3Slides.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Clear the entire map" />
                    </tooltip>
                </Button>

                <!-- Save Map Button -->
                <Button fx:id="saveMapBtn" onAction="#saveMap"
                        style="-fx-background-color: transparent; -fx-padding: 0;">
                    <graphic>
                        <ImageView fitWidth="85" fitHeight="30" preserveRatio="false">
                            <image>
                                <Image url="@../assets/ui/Button_Blue_3Slides.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <tooltip>
                        <Tooltip text="Save the current map" />
                    </tooltip>
                </Button>
                <padding>
                    <Insets right="10" />
                </padding>
            </HBox>
        </ToolBar>
    </top>

    <!-- This is a center grid where the map is actually created -->
    <center>
        <GridPane fx:id="mapGrid" gridLinesVisible="true"
                style="-fx-background-color: #9dc183;">
            <!-- This is populated in the controller -->
        </GridPane>
    </center>

    <!-- This is the side grid where the tiles are selected, in addition to tools etc.. -->
    <right>
        <VBox alignment="CENTER" style="-fx-background-color: #333333; -fx-border-color: #1e1e1e; -fx-border-width: 2;">
            <GridPane fx:id="paletteGrid" gridLinesVisible="true"
                    style="-fx-background-color: #9ed199;">
            </GridPane>
        </VBox>
    </right>
</BorderPane>