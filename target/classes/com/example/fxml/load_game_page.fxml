<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.controllers.LoadGameController"
           prefWidth="640.0" prefHeight="450.0">

   <!-- Background with grass image -->
   <StackPane>
      <ImageView fitWidth="640" fitHeight="450" preserveRatio="false">
         <image>
            <Image url="@../assets/grass_furkan.png" />
         </image>
      </ImageView>
   </StackPane>

   <!-- Decorative green header bar -->
   <BorderPane pickOnBounds="false">
      <top>
         <StackPane>
            <Rectangle width="640" height="60" 
                       style="-fx-fill: #5d7542; -fx-arc-width: 0; -fx-arc-height: 0;">
               <effect>
                  <DropShadow color="#00000080" height="10" radius="4.5" width="10" />
               </effect>
            </Rectangle>
            <Text fill="#e8f4d9" text="LOAD SAVED GAME" 
                  style="-fx-font-family: 'Segoe UI'; -fx-font-size: 26px; -fx-font-weight: bold;">
               <effect>
                  <DropShadow color="#00000080" height="3" radius="1" width="3" />
               </effect>
            </Text>
         </StackPane>
      </top>
   </BorderPane>

   <!-- Main content -->
   <VBox alignment="CENTER" spacing="30.0">
      <!-- Title with stylized rectangle backdrop -->
      <StackPane>
         <!-- Title backdrop - Wooden-styled rectangle -->
         <Rectangle width="500" height="70" arcWidth="20" arcHeight="20" 
                    style="-fx-fill: linear-gradient(#6b4c2e, #4e331f); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
            <effect>
               <DropShadow color="#00000099" height="15" radius="7" width="15" />
            </effect>
         </Rectangle>
         
         <!-- Game title with wooden-like effect -->
         <VBox alignment="CENTER" spacing="5">
            <Text fill="#f0e3c8" text="Saved Games" 
                  style="-fx-font-family: 'Segoe UI'; -fx-font-size: 32px; -fx-font-weight: bold;">
               <effect>
                  <DropShadow color="#00000080" height="5" radius="2" width="5" />
               </effect>
            </Text>
            <Text fill="#d9c9a0" text="Select a game to continue" 
                  style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-font-style: italic;">
               <effect>
                  <DropShadow color="#00000080" height="2" radius="1" width="2" />
               </effect>
            </Text>
         </VBox>
      </StackPane>
         
      <!-- Game list panel -->
      <StackPane>
         <!-- Panel backdrop -->
         <Rectangle width="500" height="240" arcWidth="15" arcHeight="15" 
                    style="-fx-fill: linear-gradient(#5d4228, #422c17); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
            <effect>
               <DropShadow color="#00000099" height="12" radius="5.5" width="12" />
            </effect>
         </Rectangle>
            
         <!-- Save game list -->
         <VBox alignment="CENTER" spacing="15" maxWidth="460">
            <padding>
               <Insets top="20" right="20" bottom="20" left="20" />
            </padding>
            
            <!-- ListView for saved games -->
            <ListView fx:id="savedGamesListView" prefHeight="140" prefWidth="420" 
                      style="-fx-background-color: #7d5a3c; -fx-border-color: #a07748; 
                             -fx-border-width: 2; -fx-control-inner-background: #6b4c2e;" />
            
            <!-- Action buttons -->
            <HBox alignment="CENTER" spacing="20">
               <Button fx:id="loadBtn" text="Load Game" prefWidth="140" prefHeight="35" 
                      onAction="#loadSelectedGame" styleClass="menu-button" />
               <Button fx:id="deleteBtn" text="Delete Game" prefWidth="140" prefHeight="35" 
                      onAction="#deleteSelectedGame" styleClass="menu-button" />
               <Button fx:id="homeBtn" text="Back to Home" prefWidth="140" prefHeight="35" 
                      onAction="#goToHomePage" styleClass="menu-button" />
            </HBox>
         </VBox>
      </StackPane>
   </VBox>
    
   <!-- Decorative green footer bar -->
   <BorderPane pickOnBounds="false">
      <bottom>
         <StackPane>
            <Rectangle width="640" height="40" 
                       style="-fx-fill: #5d7542; -fx-arc-width: 0; -fx-arc-height: 0;">
               <effect>
                  <DropShadow color="#00000080" height="10" radius="4.5" width="10" />
               </effect>
            </Rectangle>
         </StackPane>
      </bottom>
   </BorderPane>
    
   <!-- Corner decorative elements -->
   <BorderPane pickOnBounds="false">
      <top>
         <StackPane alignment="TOP_LEFT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </top>
      <right>
         <StackPane alignment="TOP_RIGHT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </right>
      <left>
         <StackPane alignment="BOTTOM_LEFT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </left>
      <bottom>
         <StackPane alignment="BOTTOM_RIGHT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </bottom>
   </BorderPane>
</StackPane>