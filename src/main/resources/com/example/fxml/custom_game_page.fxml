<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.CustomGameController">
    <StackPane>
        <ImageView fitHeight="600" fitWidth="800">
            <Image url="@../assets/home_page_grass.png" />
        </ImageView>
    </StackPane>
    <BorderPane pickOnBounds="false">
        <top>
            <StackPane>
                <Rectangle width="800" height="60" style="-fx-fill: #5d7542; -fx-arc-width: 0; -fx-arc-height: 0;">
                    <effect>
                        <DropShadow color="#00000080" height="10" radius="4.5" width="10" />
                    </effect>
                </Rectangle>
                <Text fill="#e8f4d9" text="CUSTOM GAME CONFIG" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 26px; -fx-font-weight: bold;">
                    <effect>
                        <DropShadow color="#00000080" height="3" radius="1" width="3" />
                    </effect>
                </Text>
            </StackPane>
        </top>
    </BorderPane>
    <VBox alignment="CENTER" spacing="30.0">
        <StackPane>
            <Rectangle width="600" height="70" arcWidth="20" arcHeight="20" style="-fx-fill: linear-gradient(#6b4c2e, #4e331f); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
                <effect>
                    <DropShadow color="#00000099" height="15" radius="7" width="15" />
                </effect>
            </Rectangle>
            <VBox alignment="CENTER" spacing="5">
                <Text fill="#f0e3c8" text="Custom Game Setup" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 32px; -fx-font-weight: bold;">
                    <effect>
                        <DropShadow color="#00000080" height="5" radius="2" width="5" />
                    </effect>
                </Text>
                <Text fill="#d9c9a0" text="Configure waves and map" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-font-style: italic;">
                    <effect>
                        <DropShadow color="#00000080" height="2" radius="1" width="2" />
                    </effect>
                </Text>
            </VBox>
        </StackPane>
        <StackPane>
            <Rectangle width="520" height="420" arcWidth="15" arcHeight="15" style="-fx-fill: linear-gradient(#5d4228, #422c17); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
                <effect>
                    <DropShadow color="#00000099" height="12" radius="5.5" width="12" />
                </effect>
            </Rectangle>
            <VBox alignment="CENTER" maxWidth="480" spacing="10">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20" />
                </padding>
                <ListView fx:id="savedMapsListView" prefHeight="180" prefWidth="480" style="-fx-background-color: #7d5a3c; -fx-border-color: #a07748; -fx-border-width: 2; -fx-control-inner-background: #6b4c2e;" />
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Text text="Starting Gold:" fill="#f0e3c8" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 14px;" />
                    <TextField fx:id="goldInput" promptText="1000" prefWidth="120" style="-fx-background-color: #e8d9b5; -fx-text-fill: #4e331f; -fx-font-size: 14px; -fx-font-family: 'Segoe UI';" />
                </HBox>
                <VBox fx:id="wavesBox" spacing="10" />
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Add Wave" onAction="#addWave" prefWidth="100" />
                    <Button text="Remove Wave" onAction="#removeWave" prefWidth="100" />
                </HBox>
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="homeBtn" onAction="#goToHomePage" prefHeight="35" prefWidth="140" text="Back to Home" />
                    <Button fx:id="startBtn" onAction="#startGame" prefHeight="35" prefWidth="140" text="Start Game" />
                </HBox>
            </VBox>
        </StackPane>
    </VBox>
    <BorderPane pickOnBounds="false">
        <bottom>
            <StackPane>
                <Rectangle width="800" height="40" style="-fx-fill: #5d7542; -fx-arc-width: 0; -fx-arc-height: 0;">
                    <effect>
                        <DropShadow color="#00000080" height="10" radius="4.5" width="10" />
                    </effect>
                </Rectangle>
            </StackPane>
        </bottom>
    </BorderPane>
    <BorderPane pickOnBounds="false">
        <top>
            <StackPane alignment="TOP_LEFT">
                <Rectangle width="40" height="40" style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
            </StackPane>
        </top>
        <right>
            <StackPane alignment="TOP_RIGHT">
                <Rectangle width="40" height="40" style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
            </StackPane>
        </right>
        <left>
            <StackPane alignment="BOTTOM_LEFT">
                <Rectangle width="40" height="40" style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
            </StackPane>
        </left>
        <bottom>
            <StackPane alignment="BOTTOM_RIGHT">
                <Rectangle width="40" height="40" style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
            </StackPane>
        </bottom>
    </BorderPane>
</StackPane>
