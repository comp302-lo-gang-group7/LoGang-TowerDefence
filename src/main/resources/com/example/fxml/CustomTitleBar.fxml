<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controllers.CustomTitleBarController"
      alignment="CENTER_RIGHT" prefHeight="25.0" prefWidth="800.0" 
      style="-fx-background-color: #5d4228; -fx-border-color: #8a673c; -fx-border-width: 0 0 1 0;"
      fx:id="titleBar">
      
    <padding>
        <Insets right="5.0"/>
    </padding>
    
    <!-- Spacer to push buttons to right -->
    <Region HBox.hgrow="ALWAYS" />
    
    <!-- Minimize button - transparent with just text -->
    <Button fx:id="minimizeBtn" text="_" onAction="#minimizeWindow"
            style="-fx-background-color: transparent; -fx-text-fill: #e8d9b5; -fx-font-weight: bold; 
                   -fx-padding: 0 8 5 8; -fx-background-radius: 0;" />
    
    <!-- Close button - transparent with just text -->
    <Button fx:id="closeBtn" text="Ã—" onAction="#closeWindow"
            style="-fx-background-color: transparent; -fx-text-fill: #e8d9b5; -fx-font-weight: bold; 
                   -fx-font-size: 16px; -fx-padding: 0 8 0 8; -fx-background-radius: 0;" />
</HBox>