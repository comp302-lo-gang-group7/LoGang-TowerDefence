<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="pauseRoot" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.PauseMenuController">
   <children>
      <!-- Semi-transparent dark overlay -->
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#00000080" height="600.0" stroke="TRANSPARENT" strokeType="INSIDE" width="800.0" />
      
      <!-- Main menu panel -->
      <VBox alignment="CENTER" maxHeight="300.0" maxWidth="400.0" prefHeight="300.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #5d4228; -fx-border-color: #8a673c; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;">
         <effect>
            <DropShadow height="20.0" radius="9.5" width="20.0" />
         </effect>
         <children>
            <Text fill="#e8d9b5" strokeType="OUTSIDE" strokeWidth="0.0" text="Game Paused" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Bold" size="24.0" />
               </font>
               <effect>
                  <DropShadow height="3.0" radius="1.0" width="3.0" />
               </effect>
            </Text>
            <Button fx:id="resumeBtn" mnemonicParsing="false" onAction="#handleResume" prefHeight="40.0" prefWidth="180.0" text="Resume Game">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="settingsBtn" mnemonicParsing="false" onAction="#handleSettings" prefHeight="40.0" prefWidth="180.0" text="Settings" />
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#handleExit" prefHeight="40.0" prefWidth="180.0" text="Exit to Main Menu">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
