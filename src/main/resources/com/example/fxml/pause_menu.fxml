<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="pauseRoot"
           xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.controllers.PauseMenuController"
           prefWidth="640" prefHeight="450"
           pickOnBounds="true">

    <!-- full-screen semitransparent dark blocker -->
    <Rectangle width="640" height="450"
               style="-fx-fill: rgba(0,0,0,0.5);" />

    <!-- main panel with wooden gradient and drop shadow -->
    <BorderPane>
        <center>
            <VBox alignment="CENTER" spacing="20">
                <Text text="GAME PAUSED"
                      style="-fx-font-family:'Segoe UI'; -fx-font-size:28px; -fx-font-weight:bold;"
                      fill="#f0e3c8">
                    <effect>
                        <DropShadow color="#00000080" radius="4" spread="0.2"/>
                    </effect>
                </Text>

                <VBox spacing="15">
                    <Button fx:id="resumeBtn" text="Resume" prefWidth="200" prefHeight="40"
                            onAction="#handleResume" styleClass="menu-button"/>
                    <Button fx:id="settingsBtn" text="Settings" prefWidth="200" prefHeight="40"
                            onAction="#handleSettings" styleClass="menu-button"/>
                    <Button fx:id="exitBtn" text="Exit to Main Menu" prefWidth="200" prefHeight="40"
                            onAction="#handleExit" styleClass="menu-button"/>
                </VBox>
            </VBox>
        </center>
        <style>
            /* draw the panel background */
            .border-pane {
            -fx-background-color: linear-gradient(#6b4c2e, #4e331f);
            -fx-background-radius: 10;
            -fx-border-color: #8a673c;
            -fx-border-width: 3;
            -fx-border-radius: 10;
            -fx-effect: dropshadow(gaussian, black, 15, 0.3, 0, 0);
            -fx-padding: 30;
            }
        </style>
    </BorderPane>
</StackPane>
