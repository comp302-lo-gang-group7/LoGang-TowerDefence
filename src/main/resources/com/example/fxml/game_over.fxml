<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="gameOverRoot" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.GameOverController">
   <children>
      <!-- Semi-transparent dark overlay -->
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#00000080" height="600.0" stroke="TRANSPARENT" strokeType="INSIDE" width="800.0" />
      
      <!-- Game Over dialog panel with wooden style -->
      <VBox alignment="CENTER" maxHeight="280.0" maxWidth="400.0" prefHeight="280.0" prefWidth="400.0" spacing="15.0" style="-fx-background-color: #5d4228; -fx-border-color: #8a673c; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;">
         <effect>
            <DropShadow height="20.0" radius="9.5" width="20.0" />
         </effect>
         <children>
            <Text fill="#e74c3c" strokeType="OUTSIDE" strokeWidth="0.0" text="GAME OVER" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Bold" size="32.0" />
               </font>
               <effect>
                  <DropShadow height="4.0" radius="1.5" width="4.0" />
               </effect>
            </Text>
            
            <Text fill="#e8d9b5" strokeType="OUTSIDE" strokeWidth="0.0" text="Your defenses have been overrun!" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI" size="16.0" />
               </font>
            </Text>
            
            <Text fill="#e8d9b5" strokeType="OUTSIDE" strokeWidth="0.0" text="Better luck next time!" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Text>
            
            <!-- Exit button with wooden style -->
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#handleExit" prefHeight="40.0" prefWidth="180.0" text="Return to Main Menu">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</StackPane>