<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="gameArea" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.controllers.GameScreenController"
           prefWidth="1600.0" prefHeight="900.0">

    <!-- 1) Game Layers -->
    <StackPane>
        <!-- a) Map layer: base terrain and tiles -->
        <Pane fx:id="mapLayer" />

        <!-- b) Entity layer: moving goblins, warriors -->
        <Pane fx:id="entityLayer" />

        <!-- âœ… c) Tower layer: this goes LAST to render on top -->
        <Pane fx:id="towerLayer" />
    </StackPane>

    <!-- 2) HUD Overlay (anchored top-left) -->
    <VBox fx:id="hudOverlay" alignment="TOP_LEFT" pickOnBounds="false">
        <Label fx:id="goldLabel" style="-fx-background-color: lightblue; -fx-padding: 10 20; -fx-font-size: 18px;" />
        <Label fx:id="healthLabel" text="10/10" style="-fx-background-color: lightcoral; -fx-padding: 10 20; -fx-font-size: 18px;" />
        <Label fx:id="waveLabel" text="1/10" style="-fx-background-color: lightsteelblue; -fx-padding: 10 20; -fx-font-size: 18px;" />
    </VBox>

    <!-- 2) Top-right menu buttons -->
    <HBox alignment="TOP_RIGHT" spacing="3" pickOnBounds="false">
        <Button fx:id="speedUp" onAction="#speedUp"
                style="-fx-background-color: transparent;
                   -fx-background-size: contain;
                   -fx-border-color: transparent;" />
        <Button fx:id="pauseButton" onAction="#pauseGame"
                style="-fx-background-color: transparent;
                   -fx-background-size: contain;
                   -fx-border-color: transparent;" />
        <Button fx:id="exitButton" onAction="#goToHomePage"
                style="-fx-background-color: transparent;
                   -fx-background-size: contain;
                   -fx-border-color: transparent;" />
    </HBox>

</StackPane>

