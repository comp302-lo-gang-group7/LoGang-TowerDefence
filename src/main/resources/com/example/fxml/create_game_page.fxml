<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.controllers.CreateGameController"
           prefWidth="1600.0" prefHeight="900.0">

   <!-- Background with grass image -->
   <StackPane>
      <ImageView fitWidth="1600" fitHeight="900" preserveRatio="false">
         <image>
            <Image url="@../assets/home_page_grass.png" />
         </image>
      </ImageView>
   </StackPane>

   <!-- Decorative green header bar -->
   <BorderPane pickOnBounds="false">
      <top>
         <StackPane>
            <Rectangle width="1600" height="80" 
                       style="-fx-fill: #5d7542; -fx-arc-width: 0; -fx-arc-height: 0;">
               <effect>
                  <DropShadow color="#00000080" height="10" radius="4.5" width="10" />
               </effect>
            </Rectangle>
            <Text fill="#e8f4d9" text="CREATE NEW GAME" 
                  style="-fx-font-family: 'Segoe UI'; -fx-font-size: 42px; -fx-font-weight: bold;">
               <effect>
                  <DropShadow color="#00000080" height="3" radius="1" width="3" />
               </effect>
            </Text>
         </StackPane>
      </top>
   </BorderPane>

   <!-- Main content -->
   <VBox alignment="CENTER" spacing="30.0">
      <!-- Title with stylized rectangle backdrop -->
      <StackPane>
         <!-- Title backdrop - Wooden-styled rectangle -->
         <Rectangle width="500" height="90" arcWidth="20" arcHeight="20" 
                    style="-fx-fill: linear-gradient(#6b4c2e, #4e331f); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
            <effect>
               <DropShadow color="#00000099" height="15" radius="7" width="15" />
            </effect>
         </Rectangle>
         
         <!-- Game title with wooden-like effect -->
         <VBox alignment="CENTER" spacing="5">
            <Text fill="#f0e3c8" text="Game Setup" 
                  style="-fx-font-family: 'Segoe UI'; -fx-font-size: 40px; -fx-font-weight: bold;">
               <effect>
                  <DropShadow color="#00000080" height="5" radius="2" width="5" />
               </effect>
            </Text>
            <Text fill="#d9c9a0" text="Choose Your Game Mode" 
                  style="-fx-font-family: 'Segoe UI'; -fx-font-size: 16px; -fx-font-style: italic;">
               <effect>
                  <DropShadow color="#00000080" height="2" radius="1" width="2" />
               </effect>
            </Text>
         </VBox>
      </StackPane>
         
      <!-- Game options panel -->
      <StackPane>
         <!-- Options panel backdrop -->
         <Rectangle width="320" height="200" arcWidth="15" arcHeight="15" 
                    style="-fx-fill: linear-gradient(#5d4228, #422c17); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
            <effect>
               <DropShadow color="#00000099" height="12" radius="5.5" width="12" />
            </effect>
         </Rectangle>
            
         <!-- Button container -->
         <VBox alignment="CENTER" spacing="20.0" maxWidth="280.0">
            <padding>
               <Insets top="25.0" right="10.0" bottom="25.0" left="10.0" />
            </padding>
               
            <!-- Game mode buttons -->
            <Button fx:id="defaultGameBtn" text="Create Default Game" onAction="#goToDefaultGamePage" 
                    prefWidth="240.0" prefHeight="40.0" styleClass="menu-button" />
            <Button fx:id="customGameBtn" text="Create Custom Game" 
                    prefWidth="240.0" prefHeight="40.0" styleClass="menu-button" />
            <Button fx:id="backBtn" text="Back to Main Menu" onAction="#goToHomePage" 
                    prefWidth="240.0" prefHeight="40.0" styleClass="menu-button" />
         </VBox>
      </StackPane>
   </VBox>
    
   <!-- Decorative green footer bar -->
   <BorderPane pickOnBounds="false">
      <bottom>
         <StackPane>
            <Rectangle width="640" height="40" 
                       style="-fx-fill: #5d7542; -fx-arc-width: 0; -fx-arc-height: 0;">
               <effect>
                  <DropShadow color="#00000080" height="10" radius="4.5" width="10" />
               </effect>
            </Rectangle>
         </StackPane>
      </bottom>
   </BorderPane>
    
   <!-- Corner decorative elements -->
   <BorderPane pickOnBounds="false">
      <top>
         <StackPane alignment="TOP_LEFT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </top>
      <right>
         <StackPane alignment="TOP_RIGHT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </right>
      <left>
         <StackPane alignment="BOTTOM_LEFT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </left>
      <bottom>
         <StackPane alignment="BOTTOM_RIGHT">
            <Rectangle width="40" height="40" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 2;" />
         </StackPane>
      </bottom>
   </BorderPane>
</StackPane>