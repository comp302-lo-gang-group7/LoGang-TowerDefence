<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" prefHeight="450.0" prefWidth="640.0" fx:controller="com.example.controllers.CreateGameController">
   <children>
      <ImageView fitWidth="640.0" fitHeight="450.0" >
         <image>
            <Image url="@../assets/background.jpg" />
         </image>
      </ImageView>
      <VBox alignment="CENTER" spacing="15.0">
         <Button onAction="#goToDefaultGamePage" text="Create Default Game" />
         <Button text="Create Custom Game" />
         <Button onAction="#goToHomePage" text="Back" />
      </VBox>
   </children>
</StackPane>
