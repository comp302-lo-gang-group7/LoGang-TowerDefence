<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.example.controllers.GameConfigController"
           prefWidth="1600.0" prefHeight="900.0">

   <!-- Background -->
   <ImageView fitWidth="1600.0" fitHeight="900.0" preserveRatio="false">
      <Image url="@../assets/home_page_grass.png"/>
   </ImageView>

   <!-- Main Content -->
   <VBox alignment="CENTER" spacing="0">
      <!-- Header -->
      <StackPane>
         <Rectangle width="1600.0" height="120.0" style="-fx-fill: #5d7542;"/>
         <Text fill="WHITE" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 48px; -fx-font-weight: bold;" 
               text="LOAD SAVED GAME"/>
      </StackPane>

      <!-- Light green section -->
      <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #90b565;">
         <padding>
            <Insets top="40" bottom="40"/>
         </padding>

         <!-- Title Box -->
         <StackPane>
            <Rectangle width="800" height="100" arcWidth="20" arcHeight="20"
                     style="-fx-fill: linear-gradient(#6b4c2e, #4e331f); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
               <effect>
                  <DropShadow color="#00000080" height="10" radius="4.5" width="10"/>
               </effect>
            </Rectangle>
            <VBox alignment="CENTER" spacing="5">
               <Text fill="#f0e3c8" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 36px; -fx-font-weight: bold;"
                     text="Saved Games"/>
               <Text fill="#d9c9a0" style="-fx-font-family: 'Segoe UI'; -fx-font-size: 20px; -fx-font-style: italic;"
                     text="Select a game to continue"/>
            </VBox>
         </StackPane>

         <!-- Main Panel -->
         <StackPane>
            <Rectangle width="800" height="400" arcWidth="20" arcHeight="20"
                     style="-fx-fill: linear-gradient(#6b4c2e, #4e331f); -fx-stroke: #8a673c; -fx-stroke-width: 3;">
               <effect>
                  <DropShadow color="#00000080" height="10" radius="4.5" width="10"/>
               </effect>
            </Rectangle>
            <VBox alignment="CENTER" spacing="20">
               <padding>
                  <Insets top="20" right="20" bottom="20" left="20"/>
               </padding>

               <!-- Game List -->
               <ListView fx:id="savedMapsListView" prefWidth="760" prefHeight="300"
                        style="-fx-background-color: #7d5a3c; -fx-border-color: #a07748;
                               -fx-border-width: 2; -fx-control-inner-background: #6b4c2e;
                               -fx-font-size: 18px; -fx-text-fill: #e8d9b5;"/>

               <!-- Buttons -->
               <HBox alignment="CENTER" spacing="20">
                  <Button fx:id="loadBtn" onAction="#loadSelectedMap" text="Load Game"
                          prefWidth="200" prefHeight="40"
                          style="-fx-background-color: linear-gradient(#8a673c, #6b4c2e);
                                 -fx-text-fill: #e8d9b5; -fx-font-size: 16px;
                                 -fx-border-color: #a07748; -fx-border-width: 2;"/>
                  <Button fx:id="deleteBtn" text="Delete Game"
                          prefWidth="200" prefHeight="40"
                          style="-fx-background-color: linear-gradient(#8a673c, #6b4c2e);
                                 -fx-text-fill: #e8d9b5; -fx-font-size: 16px;
                                 -fx-border-color: #a07748; -fx-border-width: 2;"/>
                  <Button fx:id="homeBtn" onAction="#goToHomePage" text="Back to Home"
                          prefWidth="200" prefHeight="40"
                          style="-fx-background-color: linear-gradient(#8a673c, #6b4c2e);
                                 -fx-text-fill: #e8d9b5; -fx-font-size: 16px;
                                 -fx-border-color: #a07748; -fx-border-width: 2;"/>
               </HBox>
            </VBox>
         </StackPane>
      </VBox>

      <!-- Footer -->
      <StackPane>
         <Rectangle width="1600.0" height="120.0" style="-fx-fill: #5d7542;"/>
      </StackPane>
   </VBox>

   <!-- Corner decorations -->
   <BorderPane pickOnBounds="false">
      <top>
         <StackPane alignment="TOP_LEFT">
            <Rectangle width="80" height="80" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 3;"/>
         </StackPane>
      </top>
      <right>
         <StackPane alignment="TOP_RIGHT">
            <Rectangle width="80" height="80" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 3;"/>
         </StackPane>
      </right>
      <left>
         <StackPane alignment="BOTTOM_LEFT">
            <Rectangle width="80" height="80" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 3;"/>
         </StackPane>
      </left>
      <bottom>
         <StackPane alignment="BOTTOM_RIGHT">
            <Rectangle width="80" height="80" 
                     style="-fx-fill: #6b4c2e; -fx-stroke: #8a673c; -fx-stroke-width: 3;"/>
         </StackPane>
      </bottom>
   </BorderPane>
</StackPane>
